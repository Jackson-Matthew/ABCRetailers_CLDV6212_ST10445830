@model ABC_Retailers_ST10445830.Models.ViewModels.HomeViewModel
@{
    ViewData["BackgroundImage"] = Url.Content("~/images/home page.jpg");
}

<div class="position-relative d-flex flex-column justify-content-center align-items-center text-center" >
     

    <div class="container position-relative text-black py-5" style="z-index:1;">
        <h1 class="display-4 fw-bold mb-3">
            <i class=""></i> Discover ABC Retailers!
        </h1>
        <p class="lead mb-5 fw-bold">Ready to explore? ABC Retailers has the best deals on all the latest outdoor products</p>

        <div class="row g-3 justify-content-center">
            <div class="col-md-3 col-sm-6">
                <a asp-controller="Customer" asp-action="Index" 
                   class="btn btn-danger btn-lg w-100 h-100 d-flex flex-column justify-content-center text-black">
                    <i class="fas fa-users fa-2x mb-2 text-black"></i>
                    <span>View Customers</span>
                    <small class="text-dark">(@Model.CustomerCount total)</small>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a asp-controller="Product" asp-action="Index" 
                   class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column justify-content-center text-black">
                    <i class="fas fa-box fa-2x mb-2 text-black"></i>
                    <span>View Products</span>
                    <small class="text-dark">(@Model.ProductCount total)</small>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a asp-controller="Order" asp-action="Index" 
                   class="btn btn-success btn-lg w-100 h-100 d-flex flex-column justify-content-center text-black">
                    <i class="fas fa-shopping-cart fa-2x mb-2 text-black"></i>
                    <span>View Orders</span>
                    <small class="text-dark">(@Model.OrderCount total)</small>
                </a>
            </div>
            <div class="col-md-3 col-sm-6">
                <a asp-controller="Upload" asp-action="Index" 
                   class="btn btn-warning btn-lg w-100 h-100 d-flex flex-column justify-content-center">
                    <i class="fas fa-upload fa-2x mb-2"></i>
                    <span>Upload Files</span>
                    <small class="text-dark">(Proof of Payments)</small>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center mb-4">
    <div class="d-inline-block px-4 py-2 rounded"
         style="background-color: rgba(255, 255, 255, 0.7);">
        <h2 class="mb-0 text-black">
            <i class="fas fa-star text-warning"></i> Featured Products
        </h2>
    </div>
</div>

    @if (Model.FeaturedProducts.Any())
    {
        <div class="row justify-content-center">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                    <div class="card h-100 shadow-sm" style="background-color: rgba(255, 255, 255, 0.7);">

                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-center">@product.ProductName</h6>
                            <p class="card-text small text-muted flex-grow-1 text-center">
                                @(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                            </p>
                            <div class="mt-auto text-center">
                                <p class="card-text">
                                    <strong class="text-success">@product.Price.ToString("C")</strong>
                                </p>
                                <small class="text-muted">Stock: @product.StockAvailable</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No products available yet.
            <a asp-controller="Product" asp-action="Create" class="alert-link">Add your first product</a>!
        </div>
    }

